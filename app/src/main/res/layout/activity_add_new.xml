<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddStudentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageeditview"
            android:textColorHint="#000000"
            android:layout_weight="2"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/imageurlviewedit"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter image url"
            android:textColorHint="#aeb0a5"
            android:inputType="text" />

        <EditText
            android:id="@+id/studentnoedit"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Student #"
            android:textColorHint="#aeb0a5"
            android:inputType="text" />

        <EditText
            android:id="@+id/nameedit"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:textColorHint="#aeb0a5"
            android:inputType="textPersonName" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ageSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:hint="Age"
                    android:textColorHint="#aeb0a5" />

                <!--<Spinner-->
                    <!--android:id="@+id/ageSpinner"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="0dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:entries="@array/ageOptions"-->
                    <!--android:textColorHint="#aeb0a5" />-->

                <EditText
                    android:id="@+id/yearleveledittext"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:hint="grade"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColorHint="#aeb0a5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/genderedittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="gender"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColorHint="#aeb0a5"/>

                <EditText
                    android:id="@+id/homeroomedittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="section"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColorHint="#aeb0a5"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_weight="2"
            android:text="In case of emergency please notify:"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/parentnameedittext"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Parent Name"
            android:textColorHint="#aeb0a5"
            android:inputType="textPersonName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/contactnoedittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="contact number"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColorHint="#aeb0a5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/birthdayedittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="birthday"
                    android:inputType="date"
                    android:maxLines="1"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColorHint="#aeb0a5" />
            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/addressedittext"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="address"
            android:inputType="textPostalAddress"
            android:textColorHint="#aeb0a5" />


        <Button
            android:id="@+id/submit"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:text="Submit"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:textSize="12dp"
            android:background="#c1c1c1"


            />

        <!--end   -->
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    tools:context=".ProfileActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape"
        android:layout_above="@+id/linear">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/shape"
            android:src="@drawable/imageschoolbckground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:scaleType="centerCrop">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--counting of days present-->
                    <ImageView
                        android:id="@+id/presentimageP"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:src="@drawable/ic_human_handsup"
                        tools:ignore="NestedWeights" />

                    <TextView
                        android:id="@+id/dayspresentP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border_profile"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:text="0 Days Present"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/profileP"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:gravity="bottom"
                    android:src="@drawable/chibichubby" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--counting of days absent -->
                    <ImageView
                        android:id="@+id/absentimageP"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:src="@drawable/ic_human_handsdown"
                        tools:ignore="NestedWeights" />

                    <TextView
                        android:id="@+id/daysabsentP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/border_profile"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="center"
                        android:text="0 Days Absent"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_height="wrap_content">

           <TextView
               android:text="Name:"
               android:layout_weight="1"
               android:fontFamily="monospace"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />

           <TextView
               android:text="Student No:"
               android:layout_weight="1"
               android:fontFamily="monospace"
               android:layout_width="match_parent"
               android:layout_height="wrap_content" />


       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/nameP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:fontFamily="monospace"
                android:layout_marginEnd="4dp"
                android:background="@drawable/border_profile"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:hint="Name"
                android:padding="16dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/studentnoP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_profile"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:fontFamily="monospace"
                android:layout_marginEnd="4dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:hint="Student Number"
                android:padding="16dp"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:text="Section:"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Grade:"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/sectionP"
                android:background="@drawable/border_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:fontFamily="monospace"
                android:layout_marginEnd="4dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:hint="Section"
                android:padding="16dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/gradeP"
                android:background="@drawable/border_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:fontFamily="monospace"
                android:layout_marginEnd="4dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:hint="Grade"
                android:padding="16dp"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:text="Age:"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Gender:"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ageP"
                android:background="@drawable/border_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:fontFamily="monospace"
                android:layout_marginEnd="4dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:hint="Age"
                android:padding="16dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/genderP"
                android:background="@drawable/border_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:fontFamily="monospace"
                android:layout_marginEnd="4dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:hint="Gender"
                android:padding="16dp"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:text="Birthday:"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Contact Number:"
                android:layout_weight="1"
                android:fontFamily="monospace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/birthdayP"
                android:background="@drawable/border_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:fontFamily="monospace"
                android:layout_marginEnd="4dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:hint="Birthday"
                android:padding="16dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/contactnoP"
                android:background="@drawable/border_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:fontFamily="monospace"
                android:layout_marginEnd="4dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:hint="Contact Number"
                android:padding="16dp"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:maxLength="100"
                android:padding="16dp"
                android:fontFamily="monospace"
                android:text="In case of Emergency please Notify:"
                android:textColor="#8B0000"
                android:textSize="16sp" />

                <TextView
                    android:text="Parent/Guardian Name:"
                    android:fontFamily="monospace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/parentnameP"
                android:background="@drawable/border_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp"
                android:fontFamily="monospace"
                android:layout_marginEnd="4dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="#000"
                android:layout_weight="1"
                android:hint="Parent/Guardian Name"
                android:padding="16dp"
                android:textSize="18sp" />

        </LinearLayout>


        <TextView
            android:text="Address:"
            android:fontFamily="monospace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/addressP"
            android:background="@drawable/border_profile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:fontFamily="monospace"
            android:layout_marginEnd="4dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:hint="Address"
            android:padding="16dp"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>